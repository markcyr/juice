<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="page-header">
    <h1><%= @recipe.name %></h1>
      </div>
    </div>
    <div class="col-md-4">
      <h2>
        Juicing Article
      </h2>
      <p> Here will be a really cool article about juicing
      </p>
      <p>
        <a class="btn" href="#">View details »</a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">


      <img src="/assets/glass.jpg" alt="apple">
        <!-- <img  src="assets/green.jpg" alt="juice"> -->
    </div>
    <div class="col-md-4">
      <h3>Ingredient List</h3>
      <ul >
        <% @recipe.ingredients_recipes.each do |ingredient_recipe| %>
          <li style="list-style-type:square"><b><%= ingredient_recipe.ingredient.name %></b></li>
          <li style="list-style-type:none" > Quantity: <%= ingredient_recipe.quantity %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-4">
      <h2>
        Which Juicer should you buy
      </h2>
      <p> Let us show you our findings</p>
      <p>
        <a class="btn" href="#">View details »</a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">

        <%= form_for([@recipe, @review]) do |f| %>
            <h4> How do you like the Juice</h4>
            <div>
                <%= f.radio_button :rating, 1 %>
                <%= f.label :rating_1, "$" %>
                <%= f.radio_button :rating, 2 %>
                <%= f.label :rating_2, "$$" %>
                <%= f.radio_button :rating, 3%>
                <%= f.label :rating_3, "$$$" %>
                <%= f.radio_button :rating, 4 %>
                <%= f.label :rating_4, "$$$$" %>
                <%= f.radio_button :rating, 5 %>
                <%= f.label :rating_5, "$$$$$$" %>
            </div>
            <div>
                  <%= f.label :comment %><br />
                  <%= f.text_area :comment %>
            </div>
            <div>
                  <%= f.submit %>
            </div>
        <% end %>




    <p><h3>Reviews for <%= @recipe.name %></h3></p>

      <% @recipe.reviews.each do |review| %>
        <p>

          <b>  Comment:</b><%= review.comment %></br>
<% if review.user != nil %>
              <b> here is my rating:</b> <%= review.user.user_name %></br>
              <b>on this date:</b> <%= review.created_at%>
              <% end %>
        </p>
        <% end %>

  </div>


    <div class="col-md-4">
      <h3>HERE WILL GO THE NUTRITION VALUES</h3>
      <ul class="list-unstyled">
         <%#= @recipe.get_nutrient.each do |key, value|%>
        <li>
        <%#="#{key}: #{value}"%>
        <%=@recipe.calcium%>
        </li>
        <li>
          Consectetur adipiscing elit
        </li>
        <li>
          Integer molestie lorem at massa
        </li>
        <li>
          Facilisis in pretium nisl aliquet
        </li>
        <li>
          Nulla volutpat aliquam velit
        </li>
        <li>
          Faucibus porta lacus fringilla vel
        </li>
        <li>
          Aenean sit amet erat nunc
        </li>
        <li>
          Eget porttitor lorem
        </li>
        <%#end%>
      </ul>
    </div>
    <div class="col-md-4">
      <img alt="Bootstrap Image Preview" src="http://lorempixel.com/140/140/" class="img-rounded" />
    </div>
  </div>
</div>
